{
  "manifest_version": 3,
  "name": "LinkedIn Company Carousel",
  "version": "1.0.0",
  "description": "Display LinkedIn company updates in a beautiful full-window carousel",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/company/*"],
      "js": ["content-script-consolidated.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "LinkedIn Company Carousel",
    "default_popup": "popup/popup.html"
  },
  
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "display/*",
        "assets/*"
      ],
      "matches": ["https://www.linkedin.com/*"]
    }
  ]
}